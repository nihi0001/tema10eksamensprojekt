.brev{
  width: 2rem;
  height: 2rem;
  margin-right: 2rem;
  margin-top: 0.5rem;
}

  .hamburger{
    position: relative;
    display: block;
    cursor: pointer;
    appearance: none;
    background: none;
    outline: none;
    border: none;
  }


  .hamburger .bar,
  .hamburger:after,
  .hamburger:before {
    content: "";
    display: block;
    width: 2rem; /* breden på stregerne */
    height: 2px; /* tykkelsen på stregerne */
    background-color: #000000; /* farven på stregerne */
    margin: 5px 2rem; /* den første afgør margin top og nr 2 afgør margin left */
    transition: 0.4s;
  }
  .hamburger.is-active:before {
    transform: rotate(-45deg) translate(-5px, 5px);
    position: relative;
    z-index: 100;
  }

  .hamburger.is-active:after {
    transform: rotate(45deg) translate(-5px, -5px);
    position: relative;
    z-index: 100;
  }

  .hamburger.is-active .bar {
    opacity: 0;
  }


  .open-menu {
    position: fixed;
    top: 0; /* vigtig */
    right: 100%; /* hvor meget af skærmen den fylder. jo mindre procent jo mere kan den ses på skærmen */
    width: 100%; /* hvor meget boksen fylder */
    min-height: 100vh; /* hvis man fjerner denne, så fylder den ikke hele skærmen */
    display: block; 
    z-index: 98;
    background-color: #e6e3d8;
    padding-top: 8rem; /* tesktens placering ift toppen */
    transition: 0.4s;
    display: flex;
    justify-content: left;
    padding-left: 3.5rem; /*tekst placering forhold til højre kant*/
  }

  .open-menu.is-active {
    right: 0;
  }

  .open-menu a {
    display: block;
    color: #000000;
    font-family: 'inter';
    font-weight: 300;
    font-size: x-large;
    line-height: 2;
    /*text-transform: uppercase;*/
    /*text-decoration: underline 1px;*/
  }

  .open-menu a {
    transition: transform 0.2 ease;
  }

  .open-menu a:hover {
    transform: scale(1.1);
  }

  .img-container{
    display: flex;
    justify-content: center;
    margin-top: 7rem;
  }

